<header class="top">
  <div class="jumbotron">
  <div class="jumbotron-text">
  <h1>LATEST ON JAVASCRIPT</h1>
  <h2>by Echo JS</h2>
  <br>
  <button type="button" class="btn btn-success"id="new" style="width: 200px; text-align: center">Scrape New Articles!</button> 
  </div>
  </div>
</header>

<main>
  <section>
    <h3>Articles</h3> 
    {{#if data}}
      {{#each data}}
        {{#unless this.saved}}
          <article>
            <div class="box">
              <button type="button" class="btn btn-primary save" data-id="{{this.id}}">Save</button>
            </div>
            <div class="content">
              <a href="{{this.link}}" target="_blank" title="{{this.link}}">
                <h4>{{this.title}}</h4>
              </a>
              <div class="note">
                <p>Scraped: {{this.dateScraped}}</p>
              </div>
              {{#if this.note}}
                <div class="note">
                  <p style="background-color: rgb(255, 230, 0)">Your notes: {{this.note.text}}</p>
                </div> 
              {{/if}}   
            </div>
          </article>
        {{/unless}}
      {{/each}}
    {{/if}}
  </section>
  <section>
    <h3>Saved Articles</h3>
    {{#if data}}
      {{#each data}}
        {{#if this.saved}}
          <article>
            <div class="box">
              <button type="button" class="btn btn-danger unsave" data-id="{{this.id}}">Unsave</button>
            </div>
            <div class="content">
              <a href="{{this.link}}" target="_blank" title="{{this.link}}">
                <h4>{{this.title}}</h4>
              </a>
              <div class="note">
                <p>{{this.dateScraped}}</p>
              </div>
              {{#if this.note}}
                <div class="note">
                  <input type="text" id="{{this.id}}" 
                    class="noted" value="{{this.note.text}}"> 
                  <button type="button" style="width: 100px; height: 40px !important;"class=" btn btn-warning minus" data-id="{{this.note.id}}" 
                    id="sub-{{this.id}}">Remove note</button>
                </div>
              {{else}}
                <div class="note">
                  <input type="text" id="{{this.id}}" placeholder="enter note here">
                
                <button type="button" style="width: 100px; height: 40px !important;"class="btn btn-info plus" id="add-{{this.id}}">Add note</button>
                </div>
              {{/if}}
            </div>
          </article>
        {{/if}}
      {{/each}}
    {{/if}}
  </section>
</main>

